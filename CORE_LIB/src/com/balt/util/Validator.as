package com.balt.util{	public class Validator	{		/**		* @private		*/						public function Validator():void { }				/**		* Checks if email address has a valid format		* @param ...emails A list of one or more email address strings		* @return An array containing any invalid emails		*/						public static function verifyEmail(...emails:Array):Array		{			var invalids:Array = new Array();						for(var e:int=0; e<emails.length; e++)			{				var emailStr:String = String(emails[e]);				if (emailStr.indexOf("@")<2) 				{					invalids.push(emails[e]);				}				//check that the @ is not within 2 chars of .				else if (emailStr.lastIndexOf(".")<=(emailStr.lastIndexOf("@")+2)) 				{					invalids.push(emails[e]);				}				//check that there are at least 2 chars after the .				else if (emailStr.lastIndexOf(".")+3 > emailStr.length) 				{					invalids.push(emails[e]);				}				//check length eg min aa@bb.cc				else if (emailStr.length<8) 				{					invalids.push(emails[e]);				}				//check that there is only one @				else if (emailStr.indexOf("@") != emailStr.lastIndexOf("@")) 				{					invalids.push(emails[e]);				}				//check for spaces				else if(emailStr.indexOf(' ', 0) >= 0)				{					invalids.push(emails[e]);									}			}						return invalids;		}				/**		* Checks user age against a valid age		* @param validAge The valid age to use for comparison		* @param userMonth User supplied month of birth		* @param userDay User supplied day of birth		* @param userYear User supplied year of birth 		* @return 		*/						public static function verifyAge(validAge:Number, userMonth:Number, userDay:Number, userYear:Number):Boolean		{				var curDate:Date = new Date();			var curMonth:Number = curDate.getMonth();			var curDay:Number = curDate.getDate();			var curYear:Number = curDate.getFullYear();			var yearDiff:Number = curYear - userYear;						// Account for zero based month			userMonth -= 1;			if (yearDiff == validAge)			{				var monthDiff:Number = curMonth - userMonth;								if (monthDiff == 0) 				{					var dayDiff:Number = curDay - userDay;										if (dayDiff < 0){ return false; }				}				else if(monthDiff < 0){ return false; }			}			else if (yearDiff < validAge){ return false; }						return true;		}	}}